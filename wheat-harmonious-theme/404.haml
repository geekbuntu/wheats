%div{class: 'frame frame-center', data-path: '/404'}
  .content.wikistyle
    :each article in articles.slice(0,15)
      %article.article
        .author
          %img{src:gravitar(article.author.email, 30)}
          By #{article.author.name}
          .date{title: article.date}&= formatDate(article.date, "%Y.%m.%d")
        %h1.article-title
          %a{href: "/article/" + article.name, rel: 'bookmark', title: 'Permanent link to ' + article.title, class: 'js-slide-to'}&= article.title
        %p
          = intro(article.markdown)
        %a{href: "/" + article.name} Read more...

  .sidebar.wikistyle
    .aside
      = markdownEncode(description)
    .bubble
      %h4
        Articles
      %ul
        :each article in articles.slice(0,20)
          %li
            %a{href: "/article/" + article.name, class: 'js-slide-to'}&=article.title
            &=" by " + article.author.name
            :if article.node
              %span.versiontag&= article.node
            
            
    .aside.ui-state-highlight.ui-corner-all
      %h4.ui-widget-header.ui-corner-all Categories
      %div
        %ul
          :each category in categories
            %li
              %a{href: "/category/" + category, class: 'js-slide-to'}&= unescape(category)